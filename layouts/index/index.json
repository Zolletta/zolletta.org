[
  {{- range $index, $page := where .Site.Pages "Type" "in" .Site.Params.mainSections -}}
  {{- if and $page.Title (and $page.Content (or (not $page.IsHome) (ne $page.Params.exclude_from_search true))) -}}
  {{- if $index -}},{{- end -}}
  {
    "uri": "{{ $page.Permalink }}",
    "title": {{ $page.Title | jsonify }},
  "date": "{{ $page.Date.Format "2006-01-02" }}",
  "tags": [{{ range $tIndex, $tag := $page.Params.tags }}{{ if $tIndex }},{{ end }}{{ $tag | jsonify }}{{ end }}],
  "categories": [{{ range $cIndex, $cat := $page.Params.categories }}{{ if $cIndex }},{{ end }}{{ $cat | jsonify }}{{ end }}],
  "body": {{ $page.Plain | jsonify }}
}
  {{- end -}}
  {{- end -}}
]